<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/edit_task_horizontal_margin"
    tools:context=".ui.calendar.DateFragment">

    <ImageButton
        android:id="@+id/btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_task_min_horizontal_size"
        android:minWidth="@dimen/edit_task_min_vertical_size"
        android:src="@drawable/ic_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_task_min_horizontal_size"
        android:minWidth="@dimen/edit_task_min_vertical_size"
        app:layout_constraintRight_toLeftOf="@id/btn_delete"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SAVE"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_task_min_horizontal_size"
        android:minWidth="@dimen/edit_task_min_vertical_size"
        app:layout_constraintRight_toLeftOf="@id/btn_cancle"
        app:layout_constraintTop_toTopOf="parent"
        android:text="DEL"
        />


    <EditText
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my first task"
        android:layout_marginHorizontal="@dimen/edit_task_horizontal_margin"
        android:drawableLeft="@drawable/ic_home"
        app:layout_constraintTop_toBottomOf="@id/btn_cancle"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/descrpt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        android:layout_marginHorizontal="@dimen/edit_task_horizontal_margin"
        android:drawableLeft="@drawable/ic_home"
        android:scrollbars="vertical"
        android:maxLines="5"
        android:text="descrip your task"/>

    <TextView
        android:id="@+id/importance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrpt_text"
        android:text="NOT IMPORTANT"
        android:drawableLeft="@drawable/ic_calendar"
        />

    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@id/importance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

    </TimePicker>



</androidx.constraintlayout.widget.ConstraintLayout>